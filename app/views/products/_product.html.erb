<div class="col-xs-12 col-sm-6 col-md-3">
  <div class="display-product">
    <%= link_to  image_tag(product.image_url, class: "img-responsive product-img"), product %>
    <div class="product-description">
      <p class="product-name"><%= product.name %></p>
      <p>Description: <%= product.description %></p>
      <p>Colour: <%= product.colour %></p>
    </div>
    <hr class="divider">
    <p class="product-price">Price: <%= product.price %> &euro;</p>
    <div class="product-links">
      <span><%= link_to 'Show', product %></span>
      <% if signed_in? && current_user.admin? %>
        <span><%= link_to 'Edit', edit_product_path(product) %></span>
        <span><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
      <% end %>
    </div>
  </div>
</div> <!-- /col -->
