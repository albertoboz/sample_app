<header>
  <h1>Shop</h1>
</header>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="display-product">
        <%= image_tag(product.image_url, class: "img-responsive product-img") %>
        <div class="product-description">
          <p class="product-name"><%= product.name %></p>
          <p>Description: <%= product.description %></p>
          <p>Colour: <%= product.colour %></p>
        </div>
        <hr class="divider">
        <p class="product-price">Price: <%= product.price %> &euro;</p>
        <div class="product-links">
          <span><%= link_to 'Show', product %></span>
          <span><%= link_to 'Edit', edit_product_path(product) %></span>
          <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div>
      </div>
    </div> <!-- /col -->
  <% end %>
</div>
<br>
<div class="create-product">
  <%= link_to 'New Product', new_product_path %>
</div>
