<% if signed_in? && current_user.admin? %>
  <div class="create-product">
    <%= link_to 'Create New Product', new_product_path %>
  </div>
<% end %>
<header>
  <h1>Shop</h1>
</header>
<div class="row">
  <% @products.each do |product| %>
    <%= render partial: "product", locals: {product: product} %>
  <% end %>
</div>
