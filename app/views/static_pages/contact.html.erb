<header>
  <h1>Let's talk!</h1>
</header>
<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="contacts">
      <ul>
        <li><span class="glyphicon glyphicon-phone"></span> +4915236611607</li>
        <li><span class="glyphicon glyphicon-envelope"></span> alberto.chiorboli@gmail.com</li>
        <li><span class="glyphicon glyphicon-map-marker"></span> Address: Kopfstr. 47 Berlin, Germany 12053</li>
      </ul>
    </div>
  </div>

  <%= flash[:notice] %>

  <%= form_tag("/static_pages/thank_you") do %>
  <div class="col-xs-12 col-sm-4 col-md-4">
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control form-text-field", placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-control form-text-field", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "form-control form-textarea", placeholder: "Enter Message" %>
    </div>
    <div class="form-button">
      <%= submit_tag "Send" %>
    </div>
  </div>
  <% end %>

</div>
